{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },

    { "source": "/(admin|manager|agent|customer-service|super-admin)$", "destination": "/api/portal-guard" },
    { "source": "/(admin|manager|agent|customer-service|super-admin)/$", "destination": "/api/portal-guard" },

    { "source": "/(admin|manager|agent|customer-service|super-admin)/(.*)\\.(css|js|mjs|map|png|jpg|jpeg|gif|svg|webp|ico|json|woff|woff2|ttf)$", "destination": "/_$1/$2.$3" },

    { "source": "/(admin|manager|agent|customer-service|super-admin)/([^./]+)$", "destination": "/_$1/$2.html" },

    { "source": "/", "destination": "/index.html" },
    { "source": "/login", "destination": "/login.html" },
    { "source": "/pricing", "destination": "/pricing.html" },
    { "source": "/trial", "destination": "/signup.html" },
    { "source": "/signup", "destination": "/signup.html" },
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/global-leaderboard", "destination": "/leaderboard/index.html" },
    { "source": "/global-leaderboard-demo", "destination": "/global-leaderboard-demo.html" },
    { "source": "/test-upload-simple", "destination": "/test-upload-simple.html" },
    { "source": "/document-upload", "destination": "/document-upload.html" },
    { "source": "/test-worker-url", "destination": "/test-worker-url.html" },
    { "source": "/encrypted-upload", "destination": "/encrypted-upload.html" }
  ],
  "redirects": [
    { "source": "/public/:path*", "destination": "/:path*", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'none'; frame-src https://js.stripe.com https://hooks.stripe.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://cdnjs.cloudflare.com https://unpkg.com https://cdn.jsdelivr.net https://js.stripe.com https://maps.googleapis.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' data: https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https:; connect-src 'self' https://*.supabase.co https://api.openai.com https://unpkg.com https://cdn.jsdelivr.net https://api.stripe.com https://hooks.stripe.com https://*.workers.dev https://maps.googleapis.com; upgrade-insecure-requests;"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}
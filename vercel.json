{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/index.html" },
    { "source": "/login", "destination": "/login.html" },
    { "source": "/admin", "destination": "/admin/index.html" },
    { "source": "/admin/(.*)", "destination": "/admin/$1.html" },
    { "source": "/super-admin", "destination": "/super-admin/index.html" },
    { "source": "/super-admin/(.*)", "destination": "/super-admin/$1.html" },
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/manager", "destination": "/manager/index.html" },
    { "source": "/manager/(.*)", "destination": "/manager/$1.html" },
    { "source": "/agent", "destination": "/agent/index.html" },
    { "source": "/agent/(.*)", "destination": "/agent/$1.html" },
    { "source": "/customer-service", "destination": "/customer-service/index.html" },
    { "source": "/customer-service/(.*)", "destination": "/customer-service/$1.html" },
    { "source": "/leaderboard", "destination": "/leaderboard/index.html" },
    { "source": "/global-leaderboard", "destination": "/leaderboard/index.html" }
  ],
  "redirects": [
    { "source": "/public/:path*", "destination": "/:path*", "permanent": true },
    { "source": "/:page.html", "destination": "/:page", "permanent": true },
    { "source": "/:section/index.html", "destination": "/:section", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'none'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://cdnjs.cloudflare.com https://unpkg.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' data: https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https:; connect-src 'self' https://*.supabase.co https://api.openai.com; upgrade-insecure-requests;"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}
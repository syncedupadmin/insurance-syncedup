# Database Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Application Configuration
NEXT_PUBLIC_URL=http://localhost:3000
VERCEL_URL=your_vercel_deployment_url

# Convoso Integration Settings
CONVOSO_RATE_LIMIT=100          # Requests per minute
CONVOSO_TIMEOUT=10000           # Milliseconds (10 seconds)
CONVOSO_MAX_RETRIES=2           # Maximum retry attempts

# Security Settings
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_for_tokens

# Optional: Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_ID=your_analytics_tracking_id

# Optional: Email Configuration (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# Optional: Webhook Security
WEBHOOK_SECRET=your_webhook_verification_secret

# Development Settings
NODE_ENV=development
LOG_LEVEL=info

# Rate Limiting Redis (if using Redis for rate limiting)
# REDIS_URL=redis://localhost:6379